<% content_for :header do %>
  <%= @feed.title %>
<% end %>

<%= link_to "Refresh Feed", refresh_feed_path(@feed), class: "btn btn-warning btn-lg btn-block" %>
<% @feed.items.current.each do |item| %>

  <%= link_to "X", feed_item_path(@feed, item),
  {:controller => "items",
    :action => "update",
    :method => "patch",
    params: { donewith: true },
    class: "btn btn-danger btn-lg btn-done" } %>

  <%= link_to item.title, feed_item_path(@feed, item), class: "btn btn-primary btn-lg btn-block" %>

<% end %>

<% content_for :footer do %>
  <%= link_to "Back", feeds_path, { class: "btn btn-warning btn-lg btn-block btn-nav" } %>
<% end %>
