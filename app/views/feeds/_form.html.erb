<%= form_for(@feed, :html => {:class => 'buffer'}) do |f| %>

  <div class="form-group">
    <%= f.label "URL to RSS Feed", { style: "display: none"} %><br>
    <%= f.text_field :rss, { class: "form-control input-lg", placeholder: "Feed URL" } %>
  </div>
  <div class="actions">
    <%= f.submit "Add RSS Feed", class: "btn btn-primary btn-block btn-lg" %>
  </div>
<% end %>

<%= render 'layouts/errors', :object => @feed %>
<%= render 'layouts/exception' %>
