<%= form_for(@feed) do |f| %>

  <div class="form-group">
    <%= f.label "URL to RSS Feed", { style: "visibility: hidden"} %><br>
    <%= f.text_field :rss, { class: "form-control", placeholder: "Feed URL" } %>
  </div>
  <div class="actions">
    <%= f.submit "Add RSS Feed", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render 'layouts/errors', :object => @feed %>
<%= render 'layouts/exception' %>
